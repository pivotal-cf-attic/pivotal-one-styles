<div class="modal-dialog">
<div class="modal-content">
<div class="modal-header" <% if(header === undefined) { %>style="display:none;" <% } %>>
  <h3 class="modal-title"><%= header %></h3>
</div>
<div class="modal-body">
  <%= text %>
</div>
<div class="modal-footer">
  <a href="#" class="btn btn-lowlight" data-dismiss="modal">Cancel</a>
  <a href="#" class="btn <%= buttonClass %>"><%= buttonTitle || "OK" %></a>
</div>
</div>
</div>